<VBox fx:id="updateInfoBox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.controller.views.settings.UpdateUserController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <FontIcon iconLiteral="mdmz-settings" iconSize="64" styleClass="large-font-icon" wrappingWidth="72.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SETTINGS" wrappingWidth="219.13671875">
               <font>
                  <Font name="Montserrat ExtraBold" size="39.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="25.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </HBox>
      <TextField fx:id="nameField" layoutX="10.0" layoutY="10.0" maxWidth="280.0" prefHeight="25.0" prefWidth="300.0" promptText="Name">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="emailField" layoutX="10.0" layoutY="36.0" maxWidth="280.0" prefHeight="25.0" promptText="Email">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="phoneField" layoutX="40.0" layoutY="145.0" maxWidth="280.0" prefHeight="25.0" promptText="Phone">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="addressField" layoutX="40.0" layoutY="185.0" maxWidth="280.0" prefHeight="25.0" promptText="Address">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordField" maxWidth="280.0" prefHeight="25.0" prefWidth="376.0" promptText="Enter your password to proceed">
         <VBox.margin>
            <Insets bottom="25.0" left="30.0" right="30.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </PasswordField>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#updateInfo" prefHeight="34.0" prefWidth="110.0" text="Confirm ">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" prefHeight="34.0" prefWidth="110.0" text="Cancel">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
