<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="347.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.controller.dialogs.ModifyBookDialogController">
    <children>
        <VBox layoutY="27.0" prefWidth="382.0" spacing="10.0">
            <children>
            <TextField fx:id="titleField" promptText="Title">
               <font>
                  <Font name="Montserrat Medium" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="authorField" promptText="Author">
               <font>
                  <Font name="Montserrat Medium" size="12.0" />
               </font>
            </TextField>
            <TextArea fx:id="descriptionField" prefWidth="342.0" promptText="Description" wrapText="true">
               <font>
                  <Font name="Montserrat Medium" size="12.0" />
               </font>
            </TextArea>
            <TextField fx:id="quantityField" promptText="Quantity">
               <font>
                  <Font name="Montserrat Medium" size="12.0" />
               </font>
            </TextField>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <MFXButton fx:id="confirmButton" onAction="#onConfirmButtonClick" prefHeight="30.0" prefWidth="110.0" text="Confirm">
                            <font>
                                <Font name="Montserrat Medium" size="13.0" />
                            </font>
                        </MFXButton>
                        <MFXButton fx:id="cancelButton" onAction="#onCancelButtonClick" prefHeight="30.0" prefWidth="110.0" text="Cancel">
                            <font>
                                <Font name="Montserrat Medium" size="13.0" />
                            </font>
                        </MFXButton>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
