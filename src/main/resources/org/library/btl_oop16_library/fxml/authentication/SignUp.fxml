                                 <font>
                                    <Font name="Montserrat Medium" size="12.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="passwordField" maxWidth="350.0" />
                              <Label alignment="CENTER" opacity="0.5" text="PHONE">
                                 <font>
                                    <Font name="Montserrat Medium" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="phoneField" maxWidth="350.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <MFXButton fx:id="signUpButton" maxWidth="240.0" minHeight="50.0" minWidth="240.0" onAction="#signUpOnClick" prefHeight="50.0" prefWidth="325.0" text="SIGN UP">
