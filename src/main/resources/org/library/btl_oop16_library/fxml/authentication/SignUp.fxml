   <children>
      <BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../../css/nord-light.css">
         <center>
            <VBox alignment="CENTER" prefWidth="866.0" spacing="20.0" styleClass="bg-inset" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="190.0" fitWidth="157.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../img/logo.png" />
                     </image>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="GET YOURSELF AN ACCOUNT" textAlignment="CENTER">
                     <font>
                        <Font name="Montserrat Medium" size="17.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <VBox spacing="10.0">
                           <children>
                              <Label alignment="CENTER" opacity="0.5" text="NAME">
                                 <font>
                                    <Font name="Montserrat Medium" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="nameField" maxWidth="350.0" />
                              <Label alignment="CENTER" opacity="0.5" text="EMAIL">
                                 <font>
                                    <Font name="Montserrat Medium" size="12.0" />
