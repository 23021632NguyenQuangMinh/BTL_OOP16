<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="245.0" prefWidth="381.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.ChangePasswordViewController">
   <children>
      <VBox layoutY="58.0" prefHeight="188.0" prefWidth="382.0" spacing="10.0">
         <children>
            <TextField fx:id="currentPasswordField" prefHeight="25.0" prefWidth="284.0" promptText="Current password" />
            <TextField fx:id="newPasswordField" prefHeight="25.0" prefWidth="284.0" promptText="New password">
               <VBox.margin>
                  <Insets />
               </VBox.margin></TextField>
            <TextField fx:id="confirmPasswordField" layoutX="30.0" layoutY="45.0" prefHeight="25.0" prefWidth="284.0" promptText="Confirm password" />
            <HBox prefHeight="71.0" prefWidth="342.0" spacing="50.0">
               <children>
                  <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirmButtonClick" text="Confirm">
                     <HBox.margin>
                        <Insets left="85.0" top="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" prefHeight="25.0" prefWidth="62.0" text="Cancel">
                     <HBox.margin>
                        <Insets top="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
