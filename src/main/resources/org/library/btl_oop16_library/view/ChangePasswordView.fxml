<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="changePasswordBox" alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.ChangePasswordViewController">
   <children>
      <HBox alignment="CENTER" prefWidth="338.0">
         <children>
            <FontIcon iconLiteral="mdmz-settings" iconSize="64" styleClass="large-font-icon" wrappingWidth="72.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SETTINGS" wrappingWidth="219.13671875">
               <font>
                  <Font name="Montserrat ExtraBold" size="39.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="25.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </HBox>
      <TextField fx:id="currentPasswordField" maxWidth="300.0" prefHeight="30.0" prefWidth="270.0" promptText="Current password">
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="newPasswordField" maxWidth="300.0" prefHeight="30.0" prefWidth="270.0" promptText="New password">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="confirmPasswordField" layoutX="30.0" layoutY="45.0" maxWidth="300.0" prefHeight="30.0" prefWidth="270.0" promptText="Confirm password">
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </TextField>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Button fx:id="confirmButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#confirmPasswordChange" prefHeight="35.0" prefWidth="110.0" text="Confirm" textAlignment="CENTER">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancelChange" prefHeight="35.0" prefWidth="110.0" text="Cancel" textAlignment="CENTER">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
