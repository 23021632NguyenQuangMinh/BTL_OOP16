<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="226.0" prefWidth="331.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.ChangePasswordViewController">
   <children>
      <VBox layoutY="14.0" prefHeight="126.0" prefWidth="331.0" spacing="15.0">
         <children>
            <TextField fx:id="currentPasswordField" prefHeight="30.0" prefWidth="270.0" promptText="Current password">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font></TextField>
            <TextField fx:id="newPasswordField" prefHeight="30.0" prefWidth="270.0" promptText="New password">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font></TextField>
            <TextField fx:id="confirmPasswordField" layoutX="30.0" layoutY="45.0" prefHeight="30.0" prefWidth="270.0" promptText="Confirm password">
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font></TextField>
            <HBox alignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" />
         </padding>
      </VBox>
      <Button fx:id="confirmButton1" contentDisplay="CENTER" layoutX="80.0" layoutY="179.0" mnemonicParsing="false" onAction="#confirmPasswordChange" text="Confirm" textAlignment="CENTER">
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </Button>
      <Button fx:id="cancelButton" contentDisplay="CENTER" layoutX="189.0" layoutY="179.0" mnemonicParsing="false" onAction="#cancelChange" text="Cancel" textAlignment="CENTER">
         <font>
            <Font name="Montserrat Regular" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
