<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1060.0" styleClass="bg-default" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.BookViewController">
   <children>
      <BorderPane layoutX="234.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="TOP_RIGHT" spacing="5.0">
                     <children>
                        <Button fx:id="addBookButton" graphicTextGap="30.0" mnemonicParsing="false" onAction="#addBookButtonOnClick" prefHeight="30.0" prefWidth="100.0" text="Add book" textAlignment="CENTER">
                           <font>
                              <Font name="Montserrat Medium" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="deleteBookButton" alignment="CENTER" graphicTextGap="10.0" layoutX="198.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteBookButtonOnClick" prefHeight="30.0" prefWidth="100.0" text="Delete book">
                           <font>
                              <Font name="Montserrat Medium" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="viewDetailsButton" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="View details">
                           <font>
                              <Font name="Montserrat Medium" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="exportButton" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#exportOnClick" prefHeight="30.0" prefWidth="100.0" text="Export">
                           <font>
                              <Font name="Montserrat Medium" size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="importButton" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#importOnClick" prefHeight="30.0" prefWidth="100.0" text="Import">
                           <font>
                              <Font name="Montserrat Medium" size="12.0" />
                           </font>
                        </Button>
                        <TextField fx:id="searchField" onAction="#searchBookOnClick" prefHeight="30.0" promptText="Search books by...">
                           <font>
                              <Font name="Montserrat Regular" size="12.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                  <TableView fx:id="table" minHeight="600.0" minWidth="500.0" styleClass="table">
                    <columns>
                      <TableColumn fx:id="idCol" editable="false" maxWidth="-Infinity" minWidth="50.0" prefWidth="-1.0" resizable="false" text="ID" />
                      <TableColumn fx:id="titleCol" editable="false" maxWidth="350.0" minWidth="200.0" prefWidth="342.0" resizable="false" text="TITLE" />
                        <TableColumn fx:id="authorCol" editable="false" maxWidth="393.0" minWidth="165.0" prefWidth="207.0" resizable="false" text="AUTHORS" />
                        <TableColumn fx:id="category" editable="false" maxWidth="354.0" minWidth="126.0" prefWidth="205.0" resizable="false" text="TYPE" />
                        <TableColumn fx:id="languageCol" editable="false" maxWidth="263.0" minWidth="68.0" prefWidth="94.0" resizable="false" text="LANGUAGE" />
                        <TableColumn fx:id="availableCol" editable="false" maxWidth="478.0" minWidth="0.0" prefWidth="110.0" resizable="false" text="AVAILABLE" />
                    </columns>
                     <rotationAxis>
                        <Point3D />
                     </rotationAxis>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
