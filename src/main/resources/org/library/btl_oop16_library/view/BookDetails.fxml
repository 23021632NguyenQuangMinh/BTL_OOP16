<AnchorPane fx:id="mainPane" styleClass="bg-default" stylesheets="@../../../../css/nord-light.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.BookDetailsController">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="1060.0" minHeight="-Infinity" minWidth="1060.0" prefHeight="720.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <center>
            <ScrollPane hbarPolicy="NEVER" prefWidth="900.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="contentHolder" prefHeight="361.0" prefWidth="740.0" spacing="10.0">
                     <children>
                        <Label fx:id="title" text="Title Label" wrappingWidth="600.0">
                           <font>
                              <Font name="Montserrat ExtraBold" size="36.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Label fx:id="author1" text="Author:" textOverrun="CLIP" wrappingWidth="400.0">
                                 <font>
                                    <Font name="Montserrat SemiBold" size="28.0" />
                                 </font>
                              </Label>
                              <Label fx:id="author" text="Author Label">
                                 <font>
                                    <Font name="Montserrat SemiBold" size="28.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox prefWidth="740.0" spacing="10.0">
                           <children>
                              <Label fx:id="rating1" text="Rating:">
                                 <font>
                                    <Font name="Montserrat Medium" size="24.0" />
                                 </font>
                              </Label>
                              <Label fx:id="rating" text="Rating:">
                                 <font>
                                    <Font name="Montserrat Medium" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <Text fx:id="description1" strokeType="OUTSIDE" strokeWidth="0.0" text="Description:">
                           <font>
                              <Font name="Montserrat Medium" size="18.0" />
                           </font>
                        </Text>
                        <VBox fx:id="descBox">
                           <children>
                              <Text fx:id="description" lineSpacing="5.0" strokeType="OUTSIDE" strokeWidth="0.0" text="desc" wrappingWidth="600.0">
                                 <font>
                                    <Font name="Montserrat Medium" size="18.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                        <HBox spacing="30.0">
                           <children>
                              <MFXButton fx:id="button1" buttonType="RAISED" prefHeight="36.0" prefWidth="148.0" styleClass="mfx-button" text="ADD">
                                 <font>
                                    <Font name="Montserrat Medium" size="18.0" />
                                 </font>
                              </MFXButton>
                           </children>
                        </HBox>
                        <Label text="Comments">
                           <font>
                              <Font name="Montserrat ExtraBold" size="31.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
