            </ScrollPane>
         </center>
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <MFXButton fx:id="button2" buttonType="RAISED" prefHeight="36.0" prefWidth="228.0" styleClass="mfx-button" text="BACK">
