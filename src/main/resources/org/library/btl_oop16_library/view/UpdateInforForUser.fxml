<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="253.0" prefWidth="454.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.UpdateUserDialogController">
   <opaqueInsets>
      <Insets top="10.0" />
   </opaqueInsets>
   <children>
      <VBox layoutY="-6.0" prefHeight="216.0" prefWidth="454.0">
         <children>
            <TextField fx:id="nameField" layoutX="10.0" layoutY="10.0" maxWidth="385.0" prefHeight="25.0" promptText="Name">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="emailField" layoutX="10.0" layoutY="36.0" maxWidth="385.0" prefHeight="25.0" promptText="Email">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="phoneField" layoutX="40.0" layoutY="145.0" maxWidth="385.0" prefHeight="25.0" promptText="Phone">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="addressField" layoutX="40.0" layoutY="185.0" maxWidth="385.0" prefHeight="25.0" promptText="Address">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordField" maxWidth="385.0" prefHeight="25.0" prefWidth="376.0" promptText="Enter your password to proceed">
               <VBox.margin>
                  <Insets left="30.0" right="30.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Montserrat Regular" size="14.0" />
               </font>
            </PasswordField>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                  <Button fx:id="confirmButton1" mnemonicParsing="false" onAction="#updateInfor" prefHeight="34.0" prefWidth="110.0" text="Confirm ">
                     <font>
                        <Font name="Montserrat Regular" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" prefHeight="34.0" prefWidth="110.0" text="Cancel">
                     <font>
                        <Font name="Montserrat Regular" size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
