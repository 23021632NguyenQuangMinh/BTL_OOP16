<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="settingsBox" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.SettingsController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <FontIcon iconLiteral="mdmz-settings" iconSize="64" styleClass="large-font-icon" wrappingWidth="72.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SETTINGS" wrappingWidth="219.13671875">
               <font>
                  <Font name="Montserrat ExtraBold" size="39.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </HBox>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button fx:id="changePasswordButton" graphicTextGap="30.0" mnemonicParsing="false" onAction="#viewChangePasswordView" prefHeight="70.0" prefWidth="240.0" text="Change Password">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <graphic>
                  <FontIcon iconLiteral="mdmz-vpn_key" />
               </graphic>
               <font>
                  <Font name="Montserrat Medium" size="14.0" />
               </font>
            </Button>
            <Button fx:id="updateInformationButton" alignment="CENTER" graphicTextGap="25.0" layoutX="10.0" layoutY="110.0" mnemonicParsing="false" onAction="#viewUpdateInformationView" prefHeight="70.0" prefWidth="240.0" text="Update Information">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
               <graphic>
                  <FontIcon iconLiteral="mdrmz-person" />
               </graphic>
               <font>
                  <Font name="Montserrat Medium" size="14.0" />
               </font>
            </Button>
            <Button fx:id="changeThemeButton" graphicTextGap="30.0" layoutX="10.0" layoutY="163.0" mnemonicParsing="false" onAction="#changeTheme" prefHeight="70.0" prefWidth="240.0" text="Change Theme">
               <VBox.margin>
                  <Insets bottom="50.0" top="15.0" />
               </VBox.margin>
               <graphic>
                  <FontIcon iconLiteral="mdal-color_lens" />
               </graphic>
               <font>
                  <Font name="Montserrat Medium" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
