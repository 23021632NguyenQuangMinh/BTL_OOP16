<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.library.btl_oop16_library.Controller.PreorderDialogController">
    <children>
        <VBox layoutY="27.0" prefWidth="400.0" spacing="10.0">
            <children>
                <TextField fx:id="quantityField" maxWidth="1.7976931348623157E308" promptText="Quantity" />
            </children>
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" />
            </padding>
        </VBox>
      <HBox layoutX="65.0" layoutY="84.0" spacing="20.0">
         <children>
              <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#onConfirmButtonClick" prefWidth="125.0" text="Confirm" />
              <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelButtonClick" prefWidth="125.0" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="30.0" />
         </padding>
      </HBox>
    </children>
</AnchorPane>
